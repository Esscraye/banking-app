# Variables d'environnement pour l'application bancaire

# Configuration de base de données
DATABASE_URL=mysql://banking_user:banking_password@localhost:3306/banking_db
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=banking_db
DATABASE_USER=banking_user
DATABASE_PASSWORD=banking_password

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Configuration des services
AUTH_SERVICE_PORT=8082
ACCOUNTS_SERVICE_PORT=8080
TRANSACTIONS_SERVICE_PORT=8081
NOTIFICATIONS_SERVICE_PORT=8083

# URLs des services
AUTH_SERVICE_URL=http://localhost:8082
ACCOUNTS_SERVICE_URL=http://localhost:8080
TRANSACTIONS_SERVICE_URL=http://localhost:8081
NOTIFICATIONS_SERVICE_URL=http://localhost:8083

# Configuration Redis (pour les sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configuration Email (pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configuration Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_AUTH_URL=http://localhost:8082
NEXT_PUBLIC_TRANSACTIONS_URL=http://localhost:8081
NEXT_PUBLIC_NOTIFICATIONS_URL=http://localhost:8083

# Configuration de l'environnement
ENVIRONMENT=development
LOG_LEVEL=debug

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Configuration de sécurité
RATE_LIMIT_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15m

# Configuration de monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
DB_PASSWORD=banking_password
DB_NAME=banking_db

# JWT Secret pour l'authentification
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Redis pour le cache (optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Services URLs
ACCOUNTS_SERVICE_URL=http://localhost:8080
TRANSACTIONS_SERVICE_URL=http://localhost:8081
AUTH_SERVICE_URL=http://localhost:8082
NOTIFICATIONS_SERVICE_URL=http://localhost:8083

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Docker Hub
DOCKER_HUB_USERNAME=your-docker-username
DOCKER_HUB_TOKEN=your-docker-token

# Production
ENVIRONMENT=development
LOG_LEVEL=debug
